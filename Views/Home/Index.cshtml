@model List<Category>
@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center md-col-8">
    @{
        if (User.IsInRole("Admin")){
        <div class="m-3">
            <a asp-controller="Categories" asp-action="Create">Create Category</a>
        </div>
        }

        foreach (var category in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h3><a asp-controller="Categories" asp-action="Index" asp-route-id="@category.Id">@category.Name</a></h3>
                </div>
                <div class="card-body">
                    <p>@category.Description</p>
                </div>
            </div>
        }   
    }
</div>
