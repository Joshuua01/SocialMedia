@model List<Post>
@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center md-col-8">
    @{
        foreach (var post in Model)
        {
            <div class="card">
                <div class="card-header">
                    <h3><a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id">@post.Title</a></h3>
                </div>
                <div class="card-body">
                    <p>@post.Content</p>
                </div>
            </div>
        }   
    }
</div>
