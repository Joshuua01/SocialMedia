@model Category

@{
    ViewData["Title"] = "Index";
}

 
    <div class="text-center md-col-8">
       <div class="m-3">
            <form method="post">
                <button class="btn btn-outline-primary m-2"
                    asp-controller="Posts"
                    asp-action="Create"
                    asp-route-id="@Model.Id">
                        Create Post
                </button>
            </form>
            
       </div>
           @{ if (Model.Posts is not null)
            {
                foreach (var post in Model.Posts)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                                <h3><a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id">@post.Title</a></h3>
                        </div>
                        <div class="card-body">
                                <p>@post.Content</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div> No posts in this category yet. </div>
            }
        }
        </div>
       
        
    



